.container
	.w50.center-block

		%h1 Dodaj post
		=form_for(@post) do |f|
			.form-group
			=f.label "Zalogowano: " 
			=current_user.email
			%br
			%br
			.form-group
			=f.label "Treśc postu: " 
			=f.text_field :content
	
			=f.submit "Dodaj!", class: "btn btn-primary"
		%br 
		=link_to "Powrót", posts_path
		%br
		=link_to "Powrót do Strony Głównej", root_url